{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
<div class="px-4 d-flex">
    {{ include('components/categories.html.twig') }}

    <div class="container">
        <h1 class="mt-3 mb-4" style="padding-top: 20px">Products</h1>
        <div class="row">
            {% for product in products %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="/images/accessories.jpg" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title", style="font-weight: bold">{{ product.name }} {{ product.brand.name }}</h5>
                            {% if( product.inStock == 1 ) %}
                                <h6 class="card-title">In Stock</h6>
                            {% else %}
                                <h6 class="card-title">Out of Stock</h6>
                            {% endif %}
                            <div class="d-flex justify-content-between align-item-center">
                                <span class="h5 mt-auto">{{ product.price }} â‚¬</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
